# Database
DATABASE_URL=postgresql+asyncpg://inklude:inklude@localhost:5432/inklude

# For tests (uses SQLite)
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# API Authentication (for programmatic access)
API_KEY=change-me-to-a-secure-key

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback/google

# JWT
JWT_SECRET_KEY=change-me-to-a-random-secret-at-least-32-chars-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=INFO

# spaCy model name
SPACY_MODEL=en_core_web_md
